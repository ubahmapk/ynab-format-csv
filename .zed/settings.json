{
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        { "language_server": { "name": "ruff" } }
      ]
    },
    "lsp": {
      "pyright": {
        "settings": {
          "python.analysis": {
            "diagnosticMode": "workspace",
            "typeCheckingMode": "strict"
          },
          "python": { "pythonPath": ".venv/bin/python" }
        }
      }
    }
  }
}
